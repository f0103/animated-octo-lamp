<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:elevation="4dp"
    android:theme="@style/ToolbarTheme"
    app:popupTheme="@style/ToolbarPopupTheme"
    android:layout_marginLeft="-15dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:onClick="onBackButtonClick"
        android:clickable="true"
        android:background="@drawable/drawable_toolbar_button_background"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="-45dp"
        android:paddingLeft="10dp"
        android:paddingRight="50dp"
        android:id="@+id/chat_toolbar_back" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/chat_toolbar_icon"
        android:src="@drawable/whatsappplus_person_michael"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:id="@+id/chat_toolbar_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Michael"
            android:id="@+id/chat_toolbar_content_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Michael, Maxi, Maria, You"
            android:id="@+id/chat_toolbar_content_subtitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
            android:textSize="12sp"
            android:visibility="gone"
            android:ellipsize="end"
            android:singleLine="true"/>

    </LinearLayout>


</android.support.v7.widget.Toolbar>